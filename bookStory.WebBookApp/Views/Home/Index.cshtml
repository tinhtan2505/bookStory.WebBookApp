                    <span class="numberstep"><i class="fa fa-gift"></i></span>
                    <h3 class="numbertext">Người dịch tốt nhất</h3>
                    <div style="text-align: left;">
                       <ul class="list-group">
                           @{
                                int dem = 1;
                           }
                           @foreach (var user in Model.TopUsers)
                            {
                                var star = (int)Math.Round(@user.Rating);
                                <li class="list-group-item d-flex justify-content-between align-items-center border-0">
                                  @dem. @user.FirstName @user.LastName
                                    
