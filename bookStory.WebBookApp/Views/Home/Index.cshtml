<!-- LATEST ITEMS =============================-->
<section class="item content">
    <div class="container">
        <div class="underlined-title">
            <div class="editContent">
                <h1 class="text-center latestitems">Bảng xếp hạng Sách Tốt Nhất</h1>
            </div>
            <div class="wow-hr type_short">
                <span class="wow-hr-h">
                    <i class="fa fa-star-o"></i>
                    <i class="fa fa-star-o"></i>
                    <i class="fa fa-star-o"></i>
                </span>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model.FeaturedProducts)
            {
                var url = $"/{culture}/{_loc["bookUrl"]}/{item.Id}";

                <div class="col-md-4">
                    <div class="productbox">
                        <div class="fadeshop">
                            <div class="captionshop text-center" style="display: none">
                                <h3>@item.Title</h3>
                                <h5 style="text-align: right; margin-right: 1rem">
                                    @item.Author
                                </h5>
                                
                                <p style="height: 20%; margin-top: 10px">
                                    <button type="button" class="btn btn-warning text-white">@Html.ActionLink("Xem Sách", "Detail","Book", new { id = item.Id })</button>
                                </p>
                            </div>
                            <span class="maxproduct">
                                <a href="@url"><img src="@(Configuration["BaseAddress"] + item.ThumbnailImage)" alt="@item.Title" width="322" height="480"/></a>
                            </span>
                        </div>
                        <div class="product-details">

                            <h1>@Html.ActionLink(@item.Title, "Detail","Book", new { id = item.Id })</h1>
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
</section>

