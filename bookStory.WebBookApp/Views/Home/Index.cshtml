                                            @for (int s = 0; s < star; s++)
                                            {
                                                <i class="fa fa-star"></i>
                                            }
                                            @for (int s = star; s < 5; s++)
                                            {
                                                <i class="fa fa-star-o"></i>
                                            }
                                          </span>
                                    
                                  </li>
                                dem++;
                            }
                        </ul>
